---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h4><a href="/">{SITE_TITLE}</a></h4>
		<div class="internal-links">
			<HeaderLink href="/">About me</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>	
				<img src="/public/dark-mode.svg"/>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		background: var(--color-bg);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		font-size: 27px;
		font-style: normal;
		font-weight: 700;
		.img {
			width: 45px;
			height: 45px;
		}
	}
	h4 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 33px 150px;
		height: 50px;
	}
	nav a {
		color: var(--font-color);
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		background: rgba(241, 250, 238, 0.18);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.internal-links { 
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
